[Unit]
Description={{ prometheus_gluster_exporter_name }}
StartLimitIntervalSec=500
StartLimitBurst=5

[Service]
TimeoutStartSec=0
Nice={{ prometheus_gluster_exporter_nice_level }}
User={{ prometheus_gluster_exporter_run_user }}
ExecStart={{ prometheus_gluster_exporter_bin_path }} {{ prometheus_gluster_exporter_options }}
Restart=on-failure
RestartSec=5s

[Install]
WantedBy=multi-user.target
